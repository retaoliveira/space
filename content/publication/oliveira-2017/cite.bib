 doi = {10.14295/transportes.v25i4.1214},
 file = {PDF:C\:\\Users\s̆er\\Zotero\\storage\\TDTWCN74\Øliveira et al. - 2017 - Análise do espraiamento logístico um estudo para a região metropolitana de Belo Horizonte.pdf:application/pdf},
 issn = {2237-1346},
 journal = {Transportes},
 keywords = {urban freight transport},
 number = {4},
